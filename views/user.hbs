<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="css/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LOGIN SIGN UP</title>
  <script>
       (function () {
  'use strict'
 window.addEventListener('load', function () {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation')

    // Loop over them and prevent submission
    Array.prototype.filter.call(forms, function (form) {
      form.addEventListener('submit', function (event) {
        if (form.checkValidity() === false) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  }, false)
}())
    
    </script>
</head>
<!--#CDF0EA-->
<body>
    
  {{#if removedUser}}
  <br>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

  <!--<div class="row">-->
      <div>
          <div class="row row-cols-1 row-cols-lg-2">
              <div class="col"><img src="images/adminphoto.webp" style="width:100%; height:120%; " alt="campus"></div>
              <div class="col">
                  <!--<div class="col-md-6 mx-auto p-0">-->
                      <!--<div class="card">-->
                          

                          <div class="login-box">
                              {{#ifEquals errcode "inv"}}
							<br>
                            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
						 Invalid password!
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{{/ifEquals}}
                {{#ifEquals errcode "exists"}}
							<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
						 User already exists!
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{{/ifEquals}}
                
                 {{#ifEquals errcode "notLogged"}}
							<br>
                            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
						 Please login/signup first to continue booking!
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{{/ifEquals}}

				{{#ifEquals errcode "notExist"}}
							<br>
                            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
						 User not exist!
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{{/ifEquals}}
                              <form method="POST"  action="/user" >
                                  <div class="login-snip">
                                      <input id="tab-1" type="radio" name="tabh"  class="sign-in" value="0" checked><label for="tab-1" class="tab">Login</label> 
                                      <input id="tab-2" type="radio" name="tabh" value="1" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                                      <div class="login-space">
                                          <div class="login">
                                              <form  method="POST" action="/user"></form> 
                                              <input type="hidden" name="tab" value="0">
                                              <div class="group">
                                              <input id="roll" name="rno" type="text" minlength="9" maxlength="9" class="input" placeholder="Roll Number" required> </div> 
                                               <div class="group">
                                              <input id="pass" name="pass" type="password" minlength="5" class="input form-control" data-type="password" placeholder="Password" required> </div>
                                              <div class="group"> <input id="check" type="checkbox" class="check" checked> <label for="check"><span class="icon"></span> Keep me Signed in</label> </div>
                                              <div class="group"> <input type="submit" class="button" value="Sign In"> </div>
                                               </form>
                                          </div>
                                          <div class="sign-up-form">
                                              <form  method="POST" class="needs-validation" action="/user" >
                                              <div class="group"> 
                                                  <input type="hidden" name="tab" value="1">
                                                  <input id="user" name="name" type="text" class="input"  placeholder="Name" required> </div>
                                              <div class="group"> 
                                                   <input id="roll" name="rno" type="text" class="input" minlength="9" maxlength="9" placeholder="Roll number" required> </div>
                                              <div class="group"> 
                                                   <input id="pass" name="pass" type="password" class="input" minlength="5" data-type="password" placeholder="Password" required> </div>
                                              <div class="group"> 
                                                  <input id="pass" name="email" type="email" class="input form-control" id="email" placeholder="Email address" required> </div>
                                              <div class="group"> <input type="submit" class="button" value="Sign Up" style="margin-top: 20px;"> </div>
                                              </form> 
                                          </div>
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>