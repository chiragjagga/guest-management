	<link type="text/css" rel="stylesheet" href="css/bootstrap.min.css" />

	<!-- Custom stlylesheet -->
	<link  rel="stylesheet" href="css/book.css" />

</head>
	<body style="background-color: rgba(47, 103, 177, 0.6);">
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">
                <img src="images/logo.jpg" href="/" alt="logo" style="width: 50px; height: 50px; border-radius: 50%;"></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                  </li>
                  
                  <li class="nav-item">
                    <a class="nav-link" href="/rooms">Rooms</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                  </li>
                </ul>

                {{#if removedUser}}
                    <ul class="navbar-nav ms-auto">
                          <button class="btn btn-primary" type="button">
                            <img src="images/loginlogo.png" style="width:20px; height:25px; border-radius:100%; margin-right: 10px;" alt="sign up">
                            <a href="/logout" style="width:auto; text-decoration: none; color:white;" aria-current="page"> Logout</a></button>
                    </ul>
                {{else}}
                    <ul class="navbar-nav ms-auto">
                        <button class="btn btn-primary" type="button">
                          <img src="images/loginlogo.png" style="width:20px; height:25px; border-radius:100%; margin-right: 10px;" alt="sign up">
                          <a href="user" style="text-decoration: none; color:white ;">Login</a></button> 
                    </ul>
                {{/if}}
              </div>
            </div>
          </nav>
    </header>
    <br>
    <br>
    <br>
  
    <section>
      {{#each rows}}
      <div class="card mb-3 text-white" style="max-width: 100%; margin:40px; background-color:#3C415C">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="images/{{this.Imagepath}}.jpg" class="img-fluid rounded-start" style="width:100%; height:400px" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title">{{this.Name}}</h2>
              <h3>{{this.NoOfGuests}} Bedded</h3>
              <h4>Rs.{{this.Price}}/day</h4>
              <br>
              <p class="card-text">{{this.description}}</p>
            </div>
          </div>
        </div>
      </div>
       {{/each}}
        </section>
        <br>
      <section id="footer">
        <div class="bg-dark text-light">
            <div class="row row-cols-2 row-cols-lg-2">
                <div class="col text-center py-5"><h2>National Institute of Technology Calicut</h2></div>
            <div class="col">
                <br>
                <p>Chief Warden: 0495-2285454</p>
                <p>Hostel Office: 0495-2285208</p>
                <p>Manager: 0495-2287238</p>
            <p>Website:<a href="www.nitc.ac.in"> www.nitc.ac.in</a></p>
             </div>
        </div>
   </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>