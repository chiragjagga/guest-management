            <div class="content">
                <div class="container-fluid">
                    {{#if dnm}}
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
						 "User {{dnm}} has been removed successfully!"
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
                        <script> alert("User "+{{dnm}}+" has been removed successfully!"); </script>
                    {{/if}}

                    {{#if sub}}
                    <div class="alert alert-primary alert-dismissible fade show text-center" role="alert">
						 {{sub}} data has been updated successfully!
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div
                    {{/if}}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-plain table-plain-bg">
                                <div class="card-header ">
                                    {{#ifEquals nm "Dashboard"}}
                                    <h1>WELCOME TO NITC GUEST MANAGEMENT</h1><br>
                                        {{!-- <img src="/images/logo.jpg"> --}}
                                    {{/ifEquals}}

                                    {{#ifNotEquals nm "Dashboard"}}
                                        {{#ifNotEquals nm "Managers"}} 
                                        <h4 class="card-title">{{nm}} Table</h4>
                                        <p class="card-category">Details of the {{nm}} </p>
                                        {{/ifNotEquals}}
                                    {{/ifNotEquals}}

                                    {{#ifEquals nm "Managers"}}
                                    <form method="POST" action="/adminUpdateForm">
                                         <button class="btn btn-primary btn-lg float-right" name="addAdmin" type="submit">Add User</button>
                                         </form>
                                         <h4 class="card-title">{{nm}} Table</h4>
                                        <p class="card-category">Details of the {{nm}} </p>

                                    {{/ifEquals}}
                                    
                                </div>
                                <div class="card-body table-full-width table-responsive">
                                
                                    <table class="table table-hover">
                                        <thead>
                                            {{#each coulmnArray}}
                                                    <th>{{this}}</th>                  
                                            {{/each}}
                                        </thead>
                                            {{#each rows}}
                                                 
                                                {{!-- <td>3</td>                                                
                                                <td>M200724CA</td>
                                                <td>9867374718</td>
                                                <td>Baileux</td> --}}
                                                {{#each this}}
                                                    <td>{{this.this}}</td>
                                                {{/each}}
                                                <form method="POST" action="/adminUpdateForm">
                                                <input name="tt" type="hidden" value="{{../nm}}">
                                                {{#ifNotEquals ../nm "Feedback"}}      
                                                {{!-- <td><button type="submit" name="upd" value={{this.ID}} class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Update</button></td> --}}
                                                <td><button type="submit" name="upd" value={{this.ID}} class="btn btn-primary">Update</button></td>
                                                {{/ifNotEquals}}
                                                </form>
                                            {{#ifEquals ../nm "Users"}}<td><form method="POST" action="/delete"><input name="dnm" type="hidden" value="{{this.RollNo}}"><button type="submit" name="uid" value={{this.ID}} onclick="" class="btn btn-primary">Delete</button></form></td>{{/ifEquals}}
                                            </tr>
                                            {{/each}}
                                    </table>
                                </div>
                                     
                                <!-- <div class="form-popup" id="myForm">
